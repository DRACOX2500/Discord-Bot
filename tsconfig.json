{
    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "removeComments": false,
        "allowSyntheticDefaultImports": true,
        "target": "es2022",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "root/*": ["./*"],
            "src/*": ["src/*"],
            "assets/*": ["assets/*"],
            "@api/*": ["src/api/*"],
            "@database/*": ["src/database/*"],
            "@errors/*": ["src/errors/*"],
            "@models/*": ["src/models/*"],
            "@modules/*": ["src/modules/*"],
            "@utils/*": ["src/utils/*"],
            "@test/*": ["test/*"]
        },
        "pretty": true,
        "incremental": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "noEmit": false
    },
    "include": ["index.ts", "src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
