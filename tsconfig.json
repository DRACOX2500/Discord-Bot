{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": false,
		"removeComments": false,
		"allowSyntheticDefaultImports": true,
		"target": "es2022",
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"sourceMap": false
	},
	"exclude": ["node_modules", "dist"]
}